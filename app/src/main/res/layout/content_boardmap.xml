<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_navigator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.floorcorn.tickettoride.ui.views.activities.BoardmapActivity"
    tools:showIn="@layout/activity_boardmap"
     >

    <FrameLayout
        android:id="@+id/mapFrame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom = "true"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapImageView" />
            <!--app:srcCompat="@drawable/map"-->

    </FrameLayout>

    <LinearLayout
        android:id="@+id/playerTokenHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop = "true">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom = "true">

        <Button
            android:id="@+id/open_card_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector_dark"
            android:padding="5dp"
            android:text="Draw Card"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/open_route_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector_dark"
            android:padding="5dp"
            android:text="Place Route"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/open_dest_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector_dark"
            android:padding="5dp"
            android:text="Destination Drawer"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/open_hand_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector_dark"
            android:padding="5dp"
            android:text="Open Hand"
            android:textColor="@android:color/white" />

    </LinearLayout>







</RelativeLayout>
